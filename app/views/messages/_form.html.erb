 
<%= form_for(@message, :html => {:class => 'form-horizontal'}) do |f|%>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <label class="col-md-1 control-label" for="message_name">名前</label>
      <div class="col-md-11">
        <%= f.text_field :name, :class => "form-control" , :placeholder => "名前を入力してください" %>
      </div>
  </div>
  <div class="form-group">
      <label class="col-md-1 control-label" for="message_age">年齢</label>
      <div class="col-md-11">
        <%= f.text_field :age, :class => "form-control" , :placeholder => "年齢を入力してください" %>
      </div>
  </div>
  <div class="form-group">
      <label class="col-md-1 control-label" for="message_body">内容</label>
      <div class="col-md-11">
        <%= f.text_area :body, :class => "form-control", :placeholder => "本文を入力してください" %>
      </div>
  </div>
  <div class="form-group">
      <div class="col-md-offset-1 col-md-11">
        <%= f.submit "メッセージ送信", class: "btn btn-sm btn-default" %>
      </div>
  </div>

<% end %>
