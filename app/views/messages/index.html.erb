<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, :html => {:class => 'form-group'}) do |f|%>
  <div class="form-horizontal">
      <label class="col-sm-1 control-label" for="message_name">名前</label>
      <div class="col-sm-11">
        <%= f.text_field :name, :class => "form-control" , :placeholder => "名前を入力してください"%>
      </div>
  </div>
  <div class="form-horizontal">
      <label class="col-sm-1 control-label" for="message_body">内容</label>
      <div class="col-sm-11">
        <%= f.text_area :body, :class => "form-control" %>
      </div>
  </div>
  <div>
      <div class="col-sm-offset-1 col-sm-11">
        <%= f.submit class: "btn btn-sm btn-default" %>
      </div>
  </div>
<% end %>

